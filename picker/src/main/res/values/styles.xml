<resources>

    //====================================== Theme Zhihu ===========================================

    <style name="Matisse.Zhihu" parent="Theme.AppCompat.Light.NoActionBar">
        <mediaItem name="colorPrimary">@color/zhihu_primary</mediaItem>
        <mediaItem name="colorPrimaryDark">@color/zhihu_primary_dark</mediaItem>
        <mediaItem name="toolbar">@style/Toolbar.Zhihu</mediaItem>
        <mediaItem name="album.dropdown.title.color">@color/zhihu_album_dropdown_title_text</mediaItem>
        <mediaItem name="album.dropdown.count.color">@color/zhihu_album_dropdown_count_text</mediaItem>
        <mediaItem name="album.element.color">@android:color/white</mediaItem>
        <mediaItem name="album.thumbnail.placeholder">@color/zhihu_album_dropdown_thumbnail_placeholder</mediaItem>
        <mediaItem name="album.emptyView">@drawable/ic_empty_zhihu</mediaItem>
        <mediaItem name="album.emptyView.textColor">@color/zhihu_album_empty_view</mediaItem>
        <mediaItem name="mediaItem.placeholder">@color/zhihu_item_placeholder</mediaItem>
        <mediaItem name="page.bg">@color/zhihu_page_bg</mediaItem>
        <mediaItem name="bottomToolbar.bg">@color/zhihu_bottom_toolbar_bg</mediaItem>
        <mediaItem name="bottomToolbar.preview.textColor">@color/zhihu_bottom_toolbar_preview</mediaItem>
        <mediaItem name="bottomToolbar.apply.textColor">@color/zhihu_bottom_toolbar_apply</mediaItem>
        <mediaItem name="listPopupWindowStyle">@style/Popup.Zhihu</mediaItem>
        <mediaItem name="capture.textColor">@color/zhihu_capture</mediaItem>
    </style>

    <style name="Toolbar.Zhihu" parent="ThemeOverlay.AppCompat.Dark.ActionBar">

    </style>

    <style name="Popup.Zhihu" parent="Widget.AppCompat.Light.ListPopupWindow">
        <mediaItem name="android:popupBackground">@color/zhihu_album_popup_bg</mediaItem>
    </style>

    //===================================== Theme Dracula ==========================================

    <style name="Matisse.Dracula" parent="Theme.AppCompat.NoActionBar">
        <mediaItem name="colorPrimary">@color/dracula_primary</mediaItem>
        <mediaItem name="colorPrimaryDark">@color/dracula_primary_dark</mediaItem>
        <mediaItem name="toolbar">@style/Toolbar.Dracula</mediaItem>
        <mediaItem name="album.dropdown.title.color">@color/dracula_album_dropdown_title_text</mediaItem>
        <mediaItem name="album.dropdown.count.color">@color/dracula_album_dropdown_count_text</mediaItem>
        <mediaItem name="album.element.color">@android:color/white</mediaItem>
        <mediaItem name="album.thumbnail.placeholder">@color/dracula_album_dropdown_thumbnail_placeholder</mediaItem>
        <mediaItem name="album.emptyView">@drawable/ic_empty_dracula</mediaItem>
        <mediaItem name="album.emptyView.textColor">@color/dracula_album_empty_view</mediaItem>
        <mediaItem name="mediaItem.placeholder">@color/dracula_item_placeholder</mediaItem>
        <mediaItem name="page.bg">@color/dracula_page_bg</mediaItem>
        <mediaItem name="bottomToolbar.bg">@color/dracula_bottom_toolbar_bg</mediaItem>
        <mediaItem name="bottomToolbar.preview.textColor">@color/dracula_bottom_toolbar_preview</mediaItem>
        <mediaItem name="bottomToolbar.apply.textColor">@color/dracula_bottom_toolbar_apply</mediaItem>
        <mediaItem name="android:listPopupWindowStyle">@style/Popup.Dracula</mediaItem>
        <mediaItem name="listPopupWindowStyle">@style/Popup.Dracula</mediaItem>
        <mediaItem name="capture.textColor">@color/dracula_capture</mediaItem>
    </style>

    <style name="Toolbar.Dracula" parent="ThemeOverlay.AppCompat.Dark.ActionBar">

    </style>

    <style name="Popup.Dracula" parent="Widget.AppCompat.ListPopupWindow">
        <mediaItem name="android:popupBackground">@color/dracula_album_popup_bg</mediaItem>
    </style>

</resources>