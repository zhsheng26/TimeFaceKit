<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:padding="12dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_route"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="长江-黄河"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="2012"
            android:textColor="@color/text_hint_color"
            android:textSize="12sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_cargo_weight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="黄沙、30吨"
            android:textColor="@color/text_light"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_cargo_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:textColor="@color/text_hint_color"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@id/tv_cargo_price"
            android:text="¥"
            android:textColor="@color/text_light"
            android:textSize="14sp" />
    </RelativeLayout>

    <View
        android:id="@+id/view_split"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginBottom="12dp"
        android:layout_marginTop="12dp"
        android:background="@color/divider_line" />

    <RelativeLayout
        android:id="@+id/rl_publishing"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">


        <Button
            android:id="@+id/btn_to_close"
            android:layout_width="70dp"
            android:layout_height="32dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/selector_action_bg"
            android:text="关闭"
            android:textSize="12sp" />

        <Button
            android:id="@+id/btn_edit_publishing"
            android:layout_width="70dp"
            android:layout_height="32dp"
            android:layout_marginRight="@dimen/large_margin"
            android:layout_toLeftOf="@id/btn_to_close"
            android:background="@drawable/selector_action_bg"
            android:text="编辑"
            android:textSize="12sp" />

        <Button
            android:id="@+id/btn_delete1"
            android:layout_width="70dp"
            android:layout_height="32dp"
            android:layout_marginRight="@dimen/large_margin"
            android:layout_toLeftOf="@id/btn_edit_publishing"
            android:background="@drawable/selector_action_bg"
            android:text="删除"
            android:textSize="12sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_no_publish"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">


        <Button
            android:id="@+id/btn_publish"
            android:layout_width="70dp"
            android:layout_height="32dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/selector_action_bg"
            android:text="发布"
            android:textSize="12sp" />

        <Button
            android:id="@+id/btn_edit"
            android:layout_width="70dp"
            android:layout_height="32dp"
            android:layout_marginRight="@dimen/large_margin"
            android:layout_toLeftOf="@id/btn_publish"
            android:background="@drawable/selector_action_bg"
            android:text="编辑"
            android:textSize="12sp" />

        <Button
            android:id="@+id/btn_delete2"
            android:layout_width="70dp"
            android:layout_height="32dp"
            android:layout_marginRight="@dimen/large_margin"
            android:layout_toLeftOf="@id/btn_edit"
            android:background="@drawable/selector_action_bg"
            android:text="删除"
            android:textSize="12sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_closed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">


        <Button
            android:id="@+id/btn_delete3"
            android:layout_width="70dp"
            android:layout_height="32dp"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/margin_middle"
            android:background="@drawable/selector_action_bg"
            android:text="删除"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_close"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_toLeftOf="@id/btn_delete3"
            android:padding="@dimen/normal_margin"
            android:text="已关闭"
            android:textColor="@color/text_hint_color"
            android:textSize="14sp" />
    </RelativeLayout>
</LinearLayout>