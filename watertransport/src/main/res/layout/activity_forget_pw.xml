<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_main"
    android:orientation="vertical"
    tools:context="com.watertransport.ui.loginregister.ForgetPwActivity">

    <include layout="@layout/layout_app_bar" />

    <LinearLayout
        android:id="@+id/layout_boat_forget"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:visibility="gone"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/normal_margin"
            android:paddingRight="@dimen/normal_margin">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/normal_margin"
                android:gravity="center"
                android:text="手机号"
                android:textColor="@color/text_action"
                android:textSize="16dp" />

            <cn.timeface.timekit.ui.edittext.XEditText
                android:id="@+id/ed_boat_phone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:inputType="phone"
                android:textColorHint="@color/text_hint_color"
                android:textSize="@dimen/text_size_title2"
                app:x_clearDrawable="@drawable/ic_delete" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="@dimen/normal_margin"
            android:layout_marginRight="@dimen/normal_margin"
            android:background="@color/divider_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/normal_margin"
            android:paddingRight="@dimen/normal_margin">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/normal_margin"
                android:gravity="center"
                android:text="船号"
                android:textColor="@color/text_action"
                android:textSize="16dp" />

            <cn.timeface.timekit.ui.edittext.XEditText
                android:id="@+id/ed_boat_num"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:inputType="phone"
                android:textColorHint="@color/text_hint_color"
                android:textSize="@dimen/text_size_title2"
                app:x_clearDrawable="@drawable/ic_delete" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="@dimen/normal_margin"
            android:layout_marginRight="@dimen/normal_margin"
            android:background="@color/divider_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/normal_margin"
            android:paddingRight="@dimen/normal_margin">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/normal_margin"
                android:gravity="center"
                android:text="船主证"
                android:textColor="@color/text_action"
                android:textSize="16dp" />

            <cn.timeface.timekit.ui.edittext.XEditText
                android:id="@+id/ed_boat_verify"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:inputType="phone"
                android:textColorHint="@color/text_hint_color"
                android:textSize="@dimen/text_size_title2"
                app:x_clearDrawable="@drawable/ic_delete" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="@dimen/normal_margin"
            android:layout_marginRight="@dimen/normal_margin"
            android:background="@color/divider_line" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_cargo_forget"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:background="@android:color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/normal_margin"
            android:paddingRight="@dimen/normal_margin">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/normal_margin"
                android:gravity="center"
                android:text="手机号"
                android:textColor="@color/text_action"
                android:textSize="16dp" />

            <cn.timeface.timekit.ui.edittext.XEditText
                android:id="@+id/ed_cargo_phone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:inputType="phone"
                android:textColorHint="@color/text_hint_color"
                android:textSize="@dimen/text_size_title2"
                app:x_clearDrawable="@drawable/ic_delete" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="@dimen/normal_margin"
            android:layout_marginRight="@dimen/normal_margin"
            android:background="@color/divider_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/normal_margin"
            android:paddingRight="@dimen/normal_margin">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/normal_margin"
                android:gravity="center"
                android:text="真实姓名"
                android:textColor="@color/text_action"
                android:textSize="16dp" />

            <cn.timeface.timekit.ui.edittext.XEditText
                android:id="@+id/ed_cargo_user_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:inputType="text"
                android:textColorHint="@color/text_hint_color"
                android:textSize="@dimen/text_size_title2"
                app:x_clearDrawable="@drawable/ic_delete" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="@dimen/normal_margin"
            android:layout_marginRight="@dimen/normal_margin"
            android:background="@color/divider_line" />

    </LinearLayout>

    <Button
        android:id="@+id/btn_submit"
        style="?android:textAppearanceMedium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="40dp"
        android:background="@drawable/selector_common_btn_bg"
        android:text="下一步"
        android:textColor="@android:color/white" />
</LinearLayout>
