<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:padding="12dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_route"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="长江-黄河"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="2012"
            android:textColor="@color/text_hint_color"
            android:textSize="12sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_cargo_weight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="黄沙、30吨"
            android:textColor="@color/text_light"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_cargo_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:textColor="@color/text_hint_color"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@id/tv_cargo_price"
            android:text="¥"
            android:textColor="@color/text_light"
            android:textSize="14sp" />
    </RelativeLayout>

    <View
        android:id="@+id/view_split"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginBottom="12dp"
        android:layout_marginTop="12dp"
        android:background="@color/divider_line" />

    <RelativeLayout
        android:id="@+id/rl_has_end"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible">


        <TextView
            android:id="@+id/btn_delete_has"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/selector_gray_stroke_bg"
            android:gravity="center"
            android:text="删除"
            android:textColor="@color/text_hint_color"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/btn_to_close"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_marginRight="@dimen/margin_middle"
            android:layout_toLeftOf="@id/btn_delete_has"
            android:background="@drawable/selector_gray_stroke_bg"
            android:gravity="center"
            android:text="已结算"
            android:textColor="@color/text_hint_color"
            android:textSize="11sp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_no_end"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible">

        <TextView
            android:id="@+id/btn_delete_no"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/selector_gray_stroke_bg"
            android:gravity="center"
            android:text="删除"
            android:textColor="@color/text_hint_color"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/btn_go_edit"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_marginRight="@dimen/margin_middle"
            android:layout_toLeftOf="@id/btn_delete_no"
            android:background="@drawable/selector_orange_bg"
            android:gravity="center"
            android:text="确认结算"
            android:textColor="@android:color/white"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/btn_edit"
            android:layout_width="70dp"
            android:layout_height="32dp"
            android:layout_marginRight="@dimen/large_margin"
            android:layout_toLeftOf="@id/btn_go_edit"
            android:gravity="center"
            android:text="运单未结算"
            android:textColor="@color/text_hint_color"
            android:textSize="12sp" />


    </RelativeLayout>

</LinearLayout>